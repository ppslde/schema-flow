<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:SchemaFlow.Wpf.Converters"
                    xmlns:sel="clr-namespace:SchemaFlow.Wpf.Selectors">
  <!-- Converter fÃ¼r Roh-XSD -->
  <conv:RawXsdConverter x:Key="RawXsdConverter"/>

  <!-- Fallback-Template als Keyed DataTemplate -->
  <DataTemplate x:Key="FallbackRawXsdTemplate">
    <Border Padding="8">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Raw XSD" FontWeight="Bold" Margin="0,0,0,6"/>
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
          <TextBox Text="{Binding Converter={StaticResource RawXsdConverter}, Mode=OneWay}"
                   FontFamily="Consolas"
                   FontSize="12"
                   IsReadOnly="True"
                   AcceptsReturn="True"
                   TextWrapping="NoWrap"
                   Background="{x:Static SystemColors.ControlLightLightBrush}"
                   BorderThickness="0"/>
        </ScrollViewer>
      </Grid>
    </Border>
  </DataTemplate>

  <!-- TemplateSelector, der erst normal nach DataTemplate sucht, sonst auf FallbackRawXsdTemplate geht -->
  <sel:FallbackDetailTemplateSelector x:Key="DetailTemplateSelector"
                                      FallbackTemplate="{StaticResource FallbackRawXsdTemplate}"/>
</ResourceDictionary>
