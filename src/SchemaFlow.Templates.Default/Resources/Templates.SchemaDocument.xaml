<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:modelDocs="clr-namespace:SchemaFlow.Model.SchemaContainers;assembly=SchemaFlow.Model">
    <DataTemplate DataType="{x:Type modelDocs:SchemaDocument}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" Orientation="Vertical" >
                <TextBlock Text="SchemaDocument" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="TargetNamespace:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding TargetNamespace}" />
                <TextBlock Text="Version:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding Version}" />

                <Expander Header="Namespaces" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Namespaces}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key}"/>
                                    <TextBlock Text="=" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Value}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>

                <Expander Header="Includes" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Includes}"/>
                </Expander>
                <Expander Header="Imports" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Imports}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Namespace}"/>
                                    <TextBlock Text=">" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Location}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>
</ResourceDictionary>
