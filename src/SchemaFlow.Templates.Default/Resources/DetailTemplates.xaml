<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:SchemaFlow.Model;assembly=SchemaFlow.Model"
                    xmlns:modelTypes="clr-namespace:SchemaFlow.Model.Types;assembly=SchemaFlow.Model"
                    xmlns:modelContent="clr-namespace:SchemaFlow.Model.ContentModels;assembly=SchemaFlow.Model"
                    xmlns:modelDocs="clr-namespace:SchemaFlow.Model.SchemaContainers;assembly=SchemaFlow.Model"
                    xmlns:modelDefs="clr-namespace:SchemaFlow.Model.GlobalDefinitions;assembly=SchemaFlow.Model"
                    xmlns:conv="clr-namespace:SchemaFlow.Templates.Default.Converters">
    <conv:OccursToTextConverter x:Key="OccursToText"/>

    <DataTemplate DataType="{x:Type modelDocs:SchemaDocument}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" Orientation="Vertical" >
                <TextBlock Text="SchemaDocument" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="TargetNamespace:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding TargetNamespace}" />
                <TextBlock Text="Version:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding Version}" />

                <Expander Header="Namespaces" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Namespaces}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key}"/>
                                    <TextBlock Text="=" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Value}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>

                <Expander Header="Includes" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Includes}"/>
                </Expander>
                <Expander Header="Imports" IsExpanded="False" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Imports}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Namespace}"/>
                                    <TextBlock Text=">" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Location}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type modelDefs:ElementDecl}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" Orientation="Vertical">
                <TextBlock Text="Element" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="Nillable:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding Nillable}" />
                <TextBlock Text="Abstract:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding Abstract}" />
                <TextBlock Text="Type:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <ContentControl Content="{Binding TypeName}"/>
                <ContentPresenter Content="{Binding AnonymousType}"/>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type modelTypes:ComplexType}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" Orientation="Vertical" >
                <TextBlock Text="ComplexType" FontWeight="Bold" FontSize="14"/>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Name:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Name}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Abstract:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Abstract}" Margin="8,0,0,0"/>
                    <TextBlock Text="Mixed:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding Mixed}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Derivation:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DerivationMethod}" Margin="8,0,0,0"/>
                    <TextBlock Text="Base:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding BaseType}" Margin="8,0,0,0"/>
                </StackPanel>

                <Expander Header="Content" IsExpanded="True" Margin="0,8,0,0">
                    <ContentPresenter Content="{Binding Content}"/>
                </Expander>

                <Expander Header="Attributes" IsExpanded="True" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Attributes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Use:"/>
                                    <TextBlock Text="{Binding Use}" Margin="8,0,0,0"/>
                                    <TextBlock Text="," Margin="8,0,0,0"/>
                                    <TextBlock Text="Ref:" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Ref}" Margin="8,0,0,0"/>
                                    <TextBlock Text="Local:" Margin="16,0,0,0"/>
                                    <TextBlock Text="{Binding LocalAttribute.Name}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="AnyAttribute:" FontWeight="SemiBold"/>
                    <ContentPresenter Content="{Binding AnyAttribute}" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type modelTypes:SimpleType}">
        <StackPanel Margin="8" Orientation="Vertical">
            <TextBlock Text="SimpleType" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Kind:" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding Type}"/>
            <TextBlock Text="BaseType:" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding BaseType}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type modelContent:Particle}">
        <StackPanel>
            <TextBlock Text="{Binding Occurs, Converter={StaticResource OccursToText}}" FontStyle="Italic"/>
            <ContentPresenter Content="{Binding Term}" Margin="0,4,0,0"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type modelContent:Compositor}">
        <StackPanel>
            <TextBlock Text="{Binding Type}" FontWeight="SemiBold"/>
            <ItemsControl ItemsSource="{Binding Particles}" Margin="0,4,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type modelContent:Element}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Element:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Ref}" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Name}" Margin="8,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Type:"/>
                <TextBlock Text="{Binding TypeName}" Margin="8,0,0,0"/>
            </StackPanel>
            <ContentPresenter Content="{Binding InlineType}" Margin="0,4,0,0"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type modelContent:Wildcard}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Wildcard:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding NamespaceConstraint}" Margin="8,0,0,0"/>
            <TextBlock Text="(" Margin="8,0,0,0"/>
            <TextBlock Text="{Binding ContentProcesing}"/>
            <TextBlock Text=")"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type modelContent:GroupRef}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="GroupRef:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding GroupName}" Margin="8,0,0,0"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
