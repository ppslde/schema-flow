<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:modelTypes="clr-namespace:SchemaFlow.Model.Types;assembly=SchemaFlow.Model">
    <DataTemplate DataType="{x:Type modelTypes:ComplexType}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" Orientation="Vertical" >
                <TextBlock Text="ComplexType" FontWeight="Bold" FontSize="14"/>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Name:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Name}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Abstract:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Abstract}" Margin="8,0,0,0"/>
                    <TextBlock Text="Mixed:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding Mixed}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Derivation:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DerivationMethod}" Margin="8,0,0,0"/>
                    <TextBlock Text="Base:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding BaseType}" Margin="8,0,0,0"/>
                </StackPanel>

                <Expander Header="Content" IsExpanded="True" Margin="0,8,0,0">
                    <ContentPresenter Content="{Binding Content}"/>
                </Expander>

                <Expander Header="Attributes" IsExpanded="True" Margin="0,8,0,0">
                    <ItemsControl ItemsSource="{Binding Attributes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Use:"/>
                                    <TextBlock Text="{Binding Use}" Margin="8,0,0,0"/>
                                    <TextBlock Text="," Margin="8,0,0,0"/>
                                    <TextBlock Text="Ref:" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding Ref}" Margin="8,0,0,0"/>
                                    <TextBlock Text="Local:" Margin="16,0,0,0"/>
                                    <TextBlock Text="{Binding LocalAttribute.Name}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="AnyAttribute:" FontWeight="SemiBold"/>
                    <ContentPresenter Content="{Binding AnyAttribute}" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type modelTypes:SimpleType}">
        <StackPanel Margin="8" Orientation="Vertical">
            <TextBlock Text="SimpleType" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Kind:" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding Type}"/>
            <TextBlock Text="BaseType:" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding BaseType}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
